/* miniprogram/pages/uploader/index.wxss */
#uploader-image {
  width: 100%;
  height: 100%;
}
.uploader-icon {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 22rpx;
  border: 2rpx solid #4e4747;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.uploader-icon:first-child{
  border: 2rpx dotted #4e4747;
}

.uploader-icon .wait-uploader{
  height: 200rpx;
}

.uploader-icon:first-child .wait-uploader{
  width: 100rpx;
  height: 100rpx;
}

.start-uploader {
  width: 240rpx;
  height: 90rpx;
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #4395ff;
  border-radius: 50rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 90rpx;
  font-size: 14px;
}
.remove {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}
.tips {
  height: 55rpx;
  width: 240rpx;
  background: rgba(0, 0, 0, .5);
  color: #FFFFFF;
  font-size: 14px;
  text-align: center;
  line-height: 55rpx;
  border-radius: 30rpx;
  position: absolute;
  bottom: -40rpx;
  left: 60rpx;
  z-index: 2;
}
.arrow {
  top: -20rpx;
  left: 30rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right:10rpx solid transparent;
  border-bottom: 20rpx solid rgba(0, 0, 0, .5);
  position: absolute;
}
